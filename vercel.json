{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/node",
        "config": {
          "build": {
            "command": "chmod +x node_modules/.bin/react-scripts && npm run build"
          }
        }
      }
    ],
    "routes": [
      { "src": "^/static/(.*)", "dest": "/static/$1" },
      { "src": ".*", "dest": "/index.html" }
    ],
    "env": {
      "CI": "false",
      "NODE_OPTIONS": "--openssl-legacy-provider"
    }
  }